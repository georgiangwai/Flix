
<article>
	<header>
		<h1><%= @movie.title %></h1>
	</header>

	<p>
		<%= @movie.description %>
	</p>

	<h3>Rating:</h3>
	<p>	
		<%= @movie.rating %>
	</p>

	<h3>Total Gross:</h3>
	<p>
		<%= format_total_gross(@movie) %>
	</p>

	<h3>Release Date:</h3>
	<p>
		<%= @movie.released_on %>
	</p>

	<h3>Cast</h3>
	<p>
	  <%= @movie.cast %>
	</p>

	<h3>Director</h3>
	<p>
	  <%= @movie.director %>
	</p>

	<h3>Duration</h3>
	<p>
	  <%= @movie.duration %>
	</p>

	<h3>Image</h3>
	<%= image_tag(@movie.image_file_name) %>


	<h3>Average Review</h3>
	<p>
	<%= format_average_stars(@movie) %>
	</p>



</article>



<%= link_to "Edit", edit_movie_path(@movie) %> |
<%= link_to "Delete", movie_path(@movie), method: :delete, data: {confirm: 'Are you sure?'} %>| 
<%= link_to pluralize(@movie.reviews.size, "Review"),
            movie_reviews_path(@movie) %>|

<footer>
<%= link_to "Write Review", new_movie_review_path(@movie), class: 'button ok review' %>
</footer>